{% extends 'base.html.twig' %}

{% block steelsheets %}
    
{% endblock %}
{% block javascripts %}
    
{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
<div class="container font">
    <h1 class="titre center">Création de votre compte:</h1>
        {{ form_start(form)}}
         {{ form_row(form.firstName, {'label': 'Prénom', 'attr': {'placeholder': "Votre prénom"}})}} 
         {{ form_row(form.lastName, {'label': 'Nom','attr': {'placeholder': "Votre nom"}})}} 
         {{ form_row(form.location, {'label': 'Ville', 'attr': {'placeholder': "Votre ville"}})}}
         {{ form_row(form.email, {'label': 'Email','attr': {'placeholder': "Votre email"}})}}   
         {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': "Votre mot de passe"}})}}     
         {{ form_row(form.password_verify, {'label': 'Mot de passe', 'attr': {'placeholder': "Retapez votre mot de passe"}})}}  
    
         <!-- form_rest permet d'afficher la liste des catégories -->   
        {{ form_rest(form)}}
        <!-- captcha -->
        <!-- Notre boite de vérification -->
        
        <div class="g-recaptcha" data-sitekey=""></div> 
        
        <!-- fin captcha -->
       
        <button type="submit" class="btn btn-success">Valider</button>
        {{ form_end(form)}}
</div>
<script src='https://www.google.com/recaptcha/api.js'></script>
 <script>document.getElementById('inscription').style.display ='none';</script>
<script>document.getElementById('connexion').style.display ='none';</script>
<script>document.getElementById('admin').style.display ='none';</script>
<script>document.getElementById('espace_membre').style.display ='none';</script>
<script>document.getElementById('deconnexion').style.display ='none';</script>
<script>document.getElementById('pas_vu').style.display ='block';</script>
{% endblock %}